<UserControl x:Class="vboy.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:vboy"
             Height="800" Width="200" Background="#aaaaaa" HorizontalAlignment="Left">
    <Grid Margin="3">
        <StackPanel Orientation="Vertical">
            <Button Content="Home" Background="Transparent" FontWeight="SemiBold" Margin="5" Click="Home_Click"/>
            <Button Content="Edit" Background="Transparent" FontWeight="SemiBold" Margin="5" Click="Edit_Click"/>
            <Button Content="Project" Background="Transparent" FontWeight="SemiBold" Margin="5" Click="Project_Click"/>
            <Button Content="Settings" Background="Transparent" FontWeight="SemiBold" Margin="5" Click="Settings_Click"/>
            <Button Content="Quit" Background="Transparent" FontWeight="SemiBold" Margin="5" Click="Quit_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
